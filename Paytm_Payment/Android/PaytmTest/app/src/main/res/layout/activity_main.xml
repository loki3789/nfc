<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhishek.paytmtest.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="cursive"
        android:text="Paytm Integration"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="40dp" />

    <EditText
        android:id="@+id/et_orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="ORDER ID"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="127dp" />

    <EditText
        android:id="@+id/et_customerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Customer Id"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/et_orderId"
        app:layout_constraintTop_toBottomOf="@+id/et_orderId"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="209dp" />

    <EditText
        android:id="@+id/et_Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@+id/et_customerId"
        app:layout_constraintTop_toBottomOf="@+id/et_customerId"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="288dp" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="44dp"
        android:text="Pay"
        app:layout_constraintEnd_toEndOf="@+id/et_Amount"
        app:layout_constraintTop_toBottomOf="@+id/et_Amount"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="378dp" />


</android.support.constraint.ConstraintLayout>
